<p style="color: green"><%= notice %></p>

<% content_for :title, "Parks" %>

<div class="row">
    <div class="col my-auto">
        <h4 class="bg-dark text-white">Parks</h4>
    </div>
    <div class="col-2">
        <%= link_to "New park", new_park_path, class: "btn btn-dark" %>
    </div>
</div>
<%= form_with(url: parks_path, method: :get, local: true) do %>
    <%= label_tag(:query, "") %>
    <%= text_field_tag(:query, params[:query], placeholder: "search...") %>
    <button type="submit" class="btn btn-dark">Search</button>
<% end %>

<table class="table table-striped" id="parks">
    <thead>
        <tr>
            <th>Name</th>
            <th>Link</th>
        </tr>
    </thead>
    <tbody>
    <% @parks.each do |park| %>
        <tr>
            <td><%= render park %></td>
            <td><%= link_to "Show Details", park %></td>
        </tr>
    <% end %>
  </tbody>
</table>


